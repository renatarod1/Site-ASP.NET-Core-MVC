@model LanchesListViewModel

<div><h2>@Model.CategoriaAtual</h2></div>
<div class="container">
    <div class="row align-items-end">
        @foreach (var lanche in Model.Lanches) {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="img-thumbnail">
                    <img src="@lanche.ImagemUrl" alt="" class="rounded" />
                </div>
                <div class="figure-caption">
                    <h3 class="text-right"> @lanche.Preco.ToString("c")</h3>
                    <h3>
                        @lanche.Nome
                    </h3>
                    <p>@lanche.DescricaoCurta</p>
                </div>
            </div>
        }
    </div>
</div>